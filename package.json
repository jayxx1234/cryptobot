{
	"name": "cryptobot",
	"version": "0.0.1",
	"description": "Cryptocurrency trader autobot",
	"author": "Jayvin Bearsley",
	"license": "GPL-3.0",
	"scripts": {
		"build": "react-scripts build",
		"start": "react-scripts start",
		"test": "yarn run prettier && react-scripts test --watchAll",
		"eject": "react-scripts eject",
		"eslint": "eslint --ext .ts --ext .tsx --ext .js .",
		"prettier": "prettier --check src/**/*.{ts,tsx} src/**/*.*css",
		"prettier:fix": "prettier --write src/**/*.{ts,tsx} src/**/*.*css"
	},
	"dependencies": {
		"@material-ui/core": "3.9.3",
		"@types/autosuggest-highlight": "3.1.0",
		"@types/material-ui": "0.21.6",
		"@types/react-autosuggest": "9.3.7",
		"@types/react-select": "2.0.15",
		"autosuggest-highlight": "3.1.1",
		"ccxt": "1.18.435",
		"classnames": "^2.2.6",
		"react": "^16.7.0",
		"react-autosuggest": "9.4.3",
		"react-dom": "^16.7.0",
		"react-scripts": "^2.1.8",
		"react-select": "2.4.2",
		"react-switch": "^4.0.1"
	},
	"devDependencies": {
		"@types/classnames": "^2.2.7",
		"@types/enzyme": "^3.1.15",
		"@types/enzyme-adapter-react-16": "^1.0.3",
		"@types/jest": "^23.3.10",
		"@types/node": "^10.12.18",
		"@types/react": "^16.7.17",
		"@types/react-dom": "^16.0.11",
		"@types/react-jss": "^8.6.1",
		"@types/react-test-renderer": "^16.0.3",
		"@typescript-eslint/parser": "^1.6.0",
		"enzyme": "^3.8.0",
		"enzyme-adapter-react-16": "^1.7.1",
		"eslint-plugin-shopify": "^26.3.0",
		"http-proxy-middleware": "^0.19.1",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"ncp": "^2.0.0",
		"prettier": "^1.16.4",
		"react-test-renderer": "^16.7.0",
		"typescript": "^3.2.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,css}": [
			"prettier --write",
			"git add"
		],
		"*.{ts,tsx}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	]
}
